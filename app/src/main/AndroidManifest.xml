<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamtreehouse.oslist">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow">
        <activity
            android:name=".LoadingPage"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ClassActivity"
            android:label="Class Activity"
            android:parentActivityName=".MainActivity1"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.ClassActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ClassActivityEdit"
            android:label="Class Activity Edit"
            android:parentActivityName=".ClassActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity1"
            android:label="@string/title_activity_main_activity1"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity3"
            android:parentActivityName=".MainActivity1">
        </activity>
        <activity
            android:name=".MainActivity4"
            android:label="@string/title_activity_main_activity4"
            android:parentActivityName=".MainActivity1"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity4" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity5"
            android:label="@string/title_activity_main_activity5"
            android:parentActivityName=".MainActivity4"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity5" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity6"
            android:label="@string/title_activity_main_activity6"
            android:parentActivityName=".MainActivity4"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity6" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity7"
            android:label="@string/title_activity_main_activity1"
            android:parentActivityName=".MainActivity4"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity7" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentProfile"
            android:label="@string/student_profile"
            android:parentActivityName=".MainActivity1"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.StudentProfile" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstructorProfile"
            android:label="@string/instructor_profile"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity1"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.InstructorProfile" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstructorEdit"
            android:label="Instructor Edit"
            android:parentActivityName=".InstructorProfile"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".AttendanceSubLayout"
            android:label="@string/title_activity_attendance_sub_layout"></activity>
        <activity
            android:name=".StudySessionsSubLayout"
            android:label="@string/title_activity_study_sessions_sub_layout"></activity>

        <activity
            android:name=".StudySessionsGuideLines"
            android:label="@string/title_activity_study_sessions_guide_lines">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.StudySessionsGuideLines" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".InfoPage"
            android:label="@string/title_activity_info_page">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.InfoPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsPage"
            android:label="@string/title_activity_about_us_page">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.AboutUsPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
