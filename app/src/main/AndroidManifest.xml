<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamtreehouse.oslist" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:uiOptions="splitActionBarWhenNarrow"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoadingPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity1"
            android:noHistory="true"
            android:label="@string/title_activity_main_activity1"
            android:parentActivityName=".MainActivity" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main_activity2"
            android:noHistory="true"
            android:parentActivityName=".MainActivity1" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity3"
            android:label="@string/title_activity_main_activity3"
            android:noHistory="true"
            android:parentActivityName=".MainActivity1" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity3" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity4"
            android:label="@string/title_activity_main_activity4"
            android:parentActivityName=".MainActivity" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity4" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity5"
            android:label="@string/title_activity_main_activity5"
            android:parentActivityName=".MainActivity4" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity5" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity6"
            android:label="@string/title_activity_main_activity6"
            android:parentActivityName=".MainActivity4" >
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.MainActivity6" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttendanceSubLayout"
            android:label="@string/title_activity_attendance_sub_layout" >
        </activity>
        <activity
            android:name=".StudySessionsSubLayout"
            android:label="@string/title_activity_study_sessions_sub_layout" >
        </activity>

        <activity
            android:name=".StudySessionsGuideLines"
            android:label="@string/title_activity_study_sessions_guide_lines"
            android:parentActivityName=".MainActivity6">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.StudySessionsGuideLines" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".InfoPage"
            android:label="@string/title_activity_info_page"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.InfoPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsPage"
            android:label="@string/title_activity_about_us_page"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.teamtreehouse.oslist.AboutUsPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
