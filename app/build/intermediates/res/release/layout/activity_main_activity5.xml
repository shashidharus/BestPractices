
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="5dp"
    tools:context="com.teamtreehouse.oslist.MainActivity5">

    <CalendarView
        android:id="@+id/calendarView1"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/horizontalLine1"
        android:layout_below="@+id/calendarView1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance for Today's Classes"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingRight="10dp"
        android:id="@+id/attendanceLabel"
        android:layout_below="@+id/horizontalLine1"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/horizontalLine2"
        android:layout_below="@+id/attendanceLabel"/>
    <TableLayout android:id="@+id/tableLayout" android:layout_width="match_parent"
        android:layout_height="match_parent" android:padding="5dp"
        android:stretchColumns="*"
        android:layout_below="@+id/horizontalLine2">
        <TableRow android:id="@+id/tableRow0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </TableRow>

        <TableRow android:id="@+id/tableRow3"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:layout_weight="1">

            <ScrollView android:id="@+id/queryScrollView"
                android:layout_width="match_parent"
                android:layout_span="2" android:padding="5dp">
                <TableLayout android:id="@+id/queryTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:padding="5dp"
                    android:stretchColumns="*">
                </TableLayout>
            </ScrollView>
        </TableRow>


    </TableLayout>
</RelativeLayout>
